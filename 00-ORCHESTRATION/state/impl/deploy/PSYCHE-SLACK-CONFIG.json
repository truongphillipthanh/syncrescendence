{
  "_comment": "OpenClaw Slack configuration for @psyche bot on Mac mini. Place in ~/.openclaw/openclaw.json",
  "channels": {
    "slack": {
      "enabled": true,
      "mode": "socket",
      "webhookPath": "/slack/events",
      "appToken": "${SLACK_APP_TOKEN_PSYCHE}",
      "botToken": "${SLACK_BOT_TOKEN_PSYCHE}",
      "defaultChannel": "psyche-ops",
      "userTokenReadOnly": true,
      "groupPolicy": "open",
      "dm": {
        "policy": "pairing"
      },
      "channels": {
        "#all-syncrescendence": { "allow": true, "respond_to_mention": true },
        "#psyche-ops": { "allow": true, "default": true },
        "#alerts": { "allow": true, "monitor_only": true },
        "#commander-execution": { "allow": true, "relay_from": "adjudicator" },
        "#adjudicator-qa": { "allow": true, "relay_from": "adjudicator" },
        "#cartographer-intelligence": { "allow": true, "relay_from": "cartographer" },
        "#linear-updates": { "allow": true, "monitor_only": true },
        "#github-events": { "allow": true, "monitor_only": true },
        "#ajna-strategic": { "allow": true, "respond_to_mention": false },
        "#sovereign-decisions": { "allow": true, "relay_to": "sovereign" }
      },
      "capabilities": [
        "send",
        "broadcast",
        "react",
        "reactions",
        "read",
        "edit",
        "delete",
        "pin",
        "unpin",
        "list-pins",
        "member-info",
        "emoji-list",
        "file-upload"
      ]
    }
  },
  "_capabilities_note": "Bot responds to: app_mention, message.channels, message.groups, message.im, message.mpim, reaction_added"
}
