<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.syncrescendence.skill-sync</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/system/Desktop/syncrescendence/orchestration/scripts/skill_sync.sh</string>
    </array>

    <key>WatchPaths</key>
    <array>
        <string>/Users/system/.agents/skills</string>
        <string>/Users/system/Desktop/syncrescendence/.claude/skills</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/tmp/syncrescendence-skill-sync-stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/syncrescendence-skill-sync-stderr.log</string>
</dict>
</plist>
