{
  "$schema": "https://gemini.google.com/cli/settings-schema.json",
  "_comment": "Syncrescendence Gemini CLI Configuration Template",
  "_instructions": "Copy to ~/.gemini/settings.json and update paths/tokens",

  "models": {
    "default": "gemini-2.5-pro",
    "reasoning": "gemini-3-pro",
    "fast": "gemini-3-flash"
  },

  "sandbox": {
    "enabled": true,
    "profile": "default"
  },

  "contextFileName": "02-ENGINE/AVATAR-GEMINI.md",

  "includeDirectories": [],

  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-filesystem", "${SYNCRESCENDENCE_PATH}"],
      "enabled": true,
      "_note": "Replace ${SYNCRESCENDENCE_PATH} with absolute path to repository"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "enabled": true,
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "_note": "Set GITHUB_TOKEN environment variable or replace with actual token"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-fetch"],
      "enabled": true
    }
  },

  "theme": "dark",

  "telemetry": false,

  "history": {
    "enabled": true,
    "maxEntries": 1000
  },

  "output": {
    "defaultFormat": "markdown",
    "syntaxHighlighting": true
  }
}
