{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Glob",
      "Grep",
      "Bash(make:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(python:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git checkout main:*)",
      "Bash(sudo:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash orchestration/scripts/session_log.sh"
          },
          {
            "type": "command",
            "command": "bash orchestration/scripts/ajna_pedigree.sh"
          },
          {
            "type": "command",
            "command": "bash orchestration/scripts/create_execution_log.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash orchestration/00-ORCHESTRATION/scripts/cc_handoff.sh"
          },
          {
            "type": "command",
            "command": "bash orchestration/scripts/pre_compaction.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash orchestration/scripts/intent_compass.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash orchestration/scripts/post_commit_ledger.sh"
          }
        ]
      }
    ]
  },
  "project": {
    "name": "Syncrescendence",
    "description": "Civilizational sensing infrastructure"
  }
}
